# zsh aliases

alias a=alias

# ssh
a ssh='ssh -YC'
a machines='open ~/.ssh/config'

# browsing
a t='tree -L 2'
a cnt="find . -type f | wc -l"
a sizes='du -h -d 1 .' # a sizes='du -sh *'
a ll='ls -laH --color=auto'
a cpwd="pwd | tr -d '\n' | pbcopy"

# duplicates
a lsdupes='fdupes -r .'
a rmdupes='fdupes -drN .'

# cd'ing
a ..="cd .."
a ..2="cd ../.."
a ..3="cd ../../.."
a ..4="cd ../../../.."
a ..5="cd ../../../../.."

# zsh related
a zcp='zmv -C'
a zln='zmv -L'
a rc='open ~/.zshrc'
a realiase='unalias -m *; source ~/.zsh_aliases'
a reload='source ~/.zshrc'
a aliases='open ~/.zsh_aliases'
a funs='open ~/.zsh_functions'

# Python related
a ipy='ipython --pylab -i --'

# Monitoring
a gputop='watch -n 0.5 nvidia-smi'

# TMUX
a tl='tmux list-sessions'
a tn='tmux new-session -s'
a ta='tmux attach-session -t'
a tmv='tmux rename-session -t'
a tk='tmux kill-session -t'
a trn='tmux rename-session -t'
